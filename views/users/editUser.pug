extends ../layout/common
block content
    h1 Edit User
    form(action=`/contact/${user.id}/update` , method="POST", enctype="multipart/form-data")
        if errors
            each error in errors
                .alert.alert-danger= error
        .form-group
            label(for="name") Username  
            input#name(type="text", name="name", class="form-control", value=`${user ? user.name : ""}`)
            label(for="phone") Phone  
            input#phone(type="text", name="phone",class="form-control", value=`${user ? user.phone : ""}`)
            label(for="avatar") Avatar  
            input#avatar(type="file", name="avatar",class="form-control-file")
        button.btn.btn-primary Edit    