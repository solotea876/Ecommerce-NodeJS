extends ../layout/common
block content
    h1=user.name
    h1 Create New User
    form(action="/contact/create", method="POST", enctype="multipart/form-data")
        if errors
            each error in errors
                .alert.alert-danger= error
        .form-group
            label(for="name") Username  
            input#name(type="text", name="name", class="form-control", value=values ? values.name : "")
            label(for="phone") Phone  
            input#phone(type="text", name="phone",class="form-control", value=values ? values.phone : "")
            label(for="avatar") Avatar  
            input#avatar(type="file", name="avatar",class="form-control-file")
        button.btn.btn-primary Create New    