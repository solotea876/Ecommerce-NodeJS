html
    head
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel="shortcut icon", href="https://res.cloudinary.com/dongvu/image/upload/v1540956568/if_nodejs_new_pantone_black_1012818_fIs_icon.ico", type="image/x-icon")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.0/animate.min.css")
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css")
        link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.4.1/css/all.css")
        link(rel="stylesheet", href="/styles/custom.css")
        block loginCSS
        title #{title}
    body
        nav.navbar.navbar-expand-md.navbar-trans.navbar-toggleable-md.p-5
            a.navbar-brand(href='/')
                img(src="https://res.cloudinary.com/dongvu/image/upload/v1540955690/logo.png") 
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarNav.collapse.navbar-collapse
                ul.navbar-nav.m-auto
                    li.nav-item
                        a.nav-link.p-0(href='/') Home
                    li.nav-item
                        a.nav-link.p-0(href='/products') Products
                    li.nav-item
                        a.nav-link.p-0(href='/about') About Us
                    li.nav-item.dropdown
                        a.nav-link.dropdown-toggle(data-toggle='dropdown' href='#' role='button' aria-haspopup='true' aria-expanded='false')
                            if session.user
                                span #{session.user.name}
                            else
                                span User
                        .dropdown-menu
                            if session.user == null
                                a.dropdown-item(href='/authen/login') Login
                                a.dropdown-item(href='/authen/signup') Sign Up
                            else
                                a.dropdown-item(href=`/contact`) Profile
                                a.dropdown-item(href=`/contact/${session.user._id}`) My orders
                                a.dropdown-item(href="/authen/logout") Log Out
                .cartItem
                        li.nav-item.box.notify
                            a.nav-link.p-0.cart(href='/cart') Cart
                                if session.cart && session.cart != null
                                    span.notification--num #{session.cart.totalQuantity}
                    
        block carousel                
        .container-fluid.p-0
            block content
        .container
            block mainPage
        section.footers.bg-light.pt-5.pb-3
            .container.pt-5
                .row
                    .col-xs-12.col-sm-6.col-md-4.footers-one
                        .footers-logo
                            img(src='https://res.cloudinary.com/dongvu/image/upload/v1540955690/logo.png' alt='Logo' style='width:120px;')
                        .footers-info.mt-3
                            p
                                | Cras sociis natoque penatibus et magnis Lorem Ipsum tells about the compmany right now the best.
                        .social-icons
                            a.p-3(href='https://www.facebook.com/')
                                i#social-fb.fab.fa-facebook-f.fa-2x.social
                            a.p-3(href='https://twitter.com/')
                                i#social-tw.fab.fa-instagram.fa-2x.social
                            a.p-3(href='https://plus.google.com/')
                                i#social-gp.fab.fa-twitter.fa-2x.social
                            a.p-3(href='mailto:bootsnipp@gmail.com')
                                i#social-em.fab.fa-google-plus-g.fa-2x.social
                    mixin footer(title,...items)
                        .col-xs-12.col-sm-6.col-md-2
                            h5=title 
                            ul.list-unstyled
                                each item in items
                                    li
                                        a(href='maintenance.html') #{item}
                    +footer('Essentials','Search','Sell your Car','Advertise with us','Dealers Portal','Post Requirements')
                    +footer('Information','Search','Sell your Car','Advertise with us','Dealers Portal','Post Requirements')
                    +footer('Explore','Search','Sell your Car','Advertise with us','Dealers Portal','Post Requirements')
                    +footer('Company','Search','Sell your Car','Advertise with us','Dealers Portal','Post Requirements')    
        section.copyright.border
            .container
                .row.text-center
                    .col-md-12.pt-3
                        p.text-muted &copy; 2018 DongVu Software Ltd.

        script(src='https://code.jquery.com/jquery-3.1.0.js')
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js")
        script(src="https://js.stripe.com/v3/")
        script(src="/scripts/script.js")
        block stripe