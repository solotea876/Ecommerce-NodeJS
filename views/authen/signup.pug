section.login-block
  .container
    .row
      .col-md-4.login-sec
        h2.text-center Sign Up Now
        if errorMsg
          h5.alert.alert-danger #{errorMsg}
        form.login-form(method="POST", action="/authen/signup")
          .form-group
            label.text-uppercase(for='exampleInputEmail1') Name
            input.form-control(type='text' placeholder='', name="name", required)
          .form-group
            label.text-uppercase(for='exampleInputEmail1') Email
            input.form-control(type='email' placeholder='', name="email", required)  
          .form-group
            label.text-uppercase(for='exampleInputPassword1') Password
            input.form-control(type='password' placeholder='', name="password", required)

            button.btn.btn-login.float-right.mt-3(type='submit') Register
