extends ../layout/common
block content
    h1 Login
    form( method="POST" )
        if errors
            each error in errors
                .alert.alert-danger= error
        .form-group
            label(for="name") Email  
            input#name(type="text", name="email", class="form-control", value=values ? values.name : "")
            label(for="phone") Password  
            input#phone(type="password", name="password",class="form-control", value=values ? values.phone : "")
        button.btn.btn-primary Login   