extends ./layout/common
block carousel
    #carouselExampleControls.carousel.slide(data-ride='carousel')
        ol.carousel-indicators
            li.active(data-target='#carouselExampleControls' data-slide-to='0')
            li(data-target='#carouselExampleControls' data-slide-to='1')
            li(data-target='#carouselExampleControls' data-slide-to='2')
        .carousel-inner
            .carousel-item.active
                img.d-block.w-100(src='https://s7d2.scene7.com/is/image/SamsungUS/DT-TradeIn-100418-v2?$cm-g-fb-full-bleed-img-jpg$' alt='Third slide' height="669")
                .carousel-caption.d-md-block
                    h2.text-left Upgrade to Galaxy now and double your trade-in value, up to $600*
                    h4.display-6.text-white.text-left No matter what you love to do, do it even better with Galaxy. 
                    a.btn.btn-info-custom.mt-3(href=`/products`) Shop Now 
            .carousel-item
                img.d-block.w-100(src='https://www.gradwell.com/wp-content/uploads/2018/05/S8-BANNER.png' alt='Second slide' height="669")
            .carousel-item
                img.d-block.w-100(src='http://apple8.com.vn/upload/news/media/39.2018/iphone-xr-banner.jpg' alt='First slide' height="669")
block content
    .container-fluid.p-0
        h2.text-center.projTitle FEATURED PRODUCTS
        .row
            each product in products
                .col-md-4.d-flex.justify-content-center.animated.fadeInUp
                    .card.border-white(style='width: 18rem;')
                        img.card-img-top(src=product.image alt='img')
                        .card-body.text-center
                            h6.card-title=product.name
                            .pro-rating
                                a(href="#")
                                    i.zmdi.zmdi-star
                                a(href="#")
                                    i.zmdi.zmdi-star
                                a(href="#")
                                    i.zmdi.zmdi-star
                                a(href="#")
                                    i.zmdi.zmdi-star-half
                                a(href="#")
                                    i.zmdi.zmdi-star-outline
                            p.big.card-text $ #{product.price}.00
                            .icon.d-flex.justify-content-center
                                ul.action-button.list-unstyled.p-0.d-flex
                                    li
                                        a(href='#',data-toggle="tooltip", data-placement="right", title="Add to Favorite")
                                            i.zmdi.zmdi-favorite
                                    li
                                        a(href=`/products/${product.id}`,data-toggle="tooltip", data-placement="right", title="View details")
                                            i.zmdi.zmdi-zoom-in
                                    li
                                        a(href='#',,data-toggle="tooltip", data-placement="right", title="Refresh")
                                            i.zmdi.zmdi-refresh
                                    li
                                        a(href=`/cart/add/${product.id}`,,data-toggle="tooltip", data-placement="right", title="Add to Cart")
                                            i.zmdi.zmdi-shopping-cart-plus

        .row.justify-content-center
            a(href="/products").btn.btn-primary.text-white.mt-5 VIEW ALL

        figure#hero1.hero.mt-5
            .inner
                .copy
                    h1 Just hurry up limited offer!
                    p.text-white Lorem ipsum dolor sit amet, consectetur adipiscing elit.
        .container.p-5.mb-3
            .row
                mixin icon_block(imgSrc, title)
                    .col-md-4
                        .icon_box.text-center
                            .icon_box_image
                                img(src=imgSrc, alt=title)
                            .icon_box_title=title
                            .icon_box_desc
                                p Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam a ultricies metus. Sed nec molestie.
                +icon_block("https://colorlib.com/preview/theme/sublime/images/icon_1.svg",'Free Shipping Worldwide')
                +icon_block("https://colorlib.com/preview/theme/sublime/images/icon_2.svg",'Free Returns')
                +icon_block("https://colorlib.com/preview/theme/sublime/images/icon_3.svg",'24h Fast Support')    
        .subcribe-box
            .container
                .row
                    .col-md-8.col-md-offset-2.d-flex.align-items-center
                        .col-md-6.text-center.text-white
                            h3 Sign Up for a Newsletter
                        .col-md-6
                            form.form-inline.qbstp-header-subscribe
                                .row
                                    .col-md-12
                                        .form-group
                                            input#email.form-control(type="text", name="email", placeholder="Enter Your Email")
                                            button.btn.btn-primary(type="submit") Subscribe





